@page "/degree"
@rendermode InteractiveServer

<h3>Degree</h3>

<input type="number" @bind="number"/>
<label>^</label>
<input type="number" @bind="degree"/>
<button @onclick="Calculate"> = </button>
<lable>@result</lable>

@code 
{
	double number;
	double degree;
	double result;
	void Calculate()
	{
		result = Math.Pow(number, degree);
	}
}
